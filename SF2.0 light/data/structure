//NOTE: grid does not requires domains. They are only not of points used to build geometries

@begin Grid TriangleGrid
@vertex A
@vertex B
@vertex C
@edge A B
@edge B C
@edge C A
@end

@begin Grid Bezier2Grid
@vertex A
@vertex B
@vertex C
@edge A AB B
@edge B BC C
@edge C CA A
@path AB BC CA AB
@end

@begin Grid Bezier3Grid
@vertex A
@vertex B
@vertex C
@edge A AB BA B
@edge B BC CB C
@edge C CA AC A
@path AB AC ACB AB
@path BC BA ACB BC
@path CA CB ACB CA
@end

@begin Grid Bezier3Grid
@vertex A
@vertex B
@vertex C
@edge A AB BA B
@edge B BC CB C
@edge C CA AC A
@internal ABC
@path AB ABC BA BC ABC CB CA ABC AC AB
@end

@begin Grid Bezier3Grid
@vertex A
@vertex B
@vertex C
@edge A AB BA B
@edge B BC CB C
@edge C CA AC A
@internal ABC
@path AB ABC BA BC ABC CB CA ABC AC AB
@end

@begin Structure Mat01
@float3 diffColor
@float3 ambColor
@end Structure 

@begin Structure Mat02
@float3 diffColor
@float3 ambColor
@float3 specColor
@end Structure 

@begin Structure PLight01
@float3 intensity
@float3 position
@end Structure 

@begin Structure PLight02
@float3 intensity
@float3 lPosition
@float3 l2Position
@end Structure 